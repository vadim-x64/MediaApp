<Window x:Class="MediaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaApp"
        WindowState="Maximized"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid Margin="20" MouseLeftButtonDown="Grid_MouseLeftButtonDown" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Media Duplicate Detector"
                   FontSize="24" FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20" />

        <Menu Grid.Row="1" Background="Transparent" Margin="0,0,0,10">
            <MenuItem Header="Файл">
                <MenuItem x:Name="OpenMenuItem" Header="Відкрити файли" Click="SelectFilesButton_Click" />
                <Separator />
                <MenuItem x:Name="ClearMenuItem" Header="Очистити список"
                          Click="ClearMenuItem_Click"
                          IsEnabled="{Binding CanClearFiles}" />
                <Separator />
                <MenuItem Header="Вихід" Click="ExitMenuItem_Click" />
            </MenuItem>
            <MenuItem Header="Перевірка">
                <MenuItem x:Name="CheckDuplicatesMenuItem" Header="Перевірити дублікати"
                          Click="CheckDuplicatesButton_Click"
                          IsEnabled="{Binding CanCheckDuplicates}" />
                <MenuItem x:Name="DeleteDuplicatesMenuItem" Header="Видалити дублікати"
                          Command="{Binding DeleteDuplicatesCommand}"
                          IsEnabled="{Binding CanDeleteDuplicates}" />
            </MenuItem>
        </Menu>

        <ListBox Grid.Row="2"
                 x:Name="FileListBox"
                 ItemsSource="{Binding MediaFiles}"
                 Background="White"
                 BorderBrush="LightGray"
                 BorderThickness="1"
                 Margin="0,10,0,0"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                 ScrollViewer.CanContentScroll="True"
                 MouseDoubleClick="FileListBox_MouseDoubleClick"
                 AllowDrop="True"
                 Drop="FileListBox_Drop"
                 DragEnter="FileListBox_DragEnter"
                 DragLeave="FileListBox_DragLeave"
                 DragOver="FileListBox_DragOver">

            <ListBox.Template>
                <ControlTemplate TargetType="ListBox">
                    <Border BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}">
                        <Grid>
                            <ScrollViewer x:Name="PART_ScrollViewer"
                                          Focusable="false"
                                          HorizontalScrollBarVisibility="{TemplateBinding ScrollViewer.HorizontalScrollBarVisibility}"
                                          VerticalScrollBarVisibility="{TemplateBinding ScrollViewer.VerticalScrollBarVisibility}">
                                <ItemsPresenter />
                            </ScrollViewer>

                            <StackPanel x:Name="EmptyStateOverlay"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Opacity="0.5">
                                <TextBlock Text="📁"
                                           FontSize="48"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,10" />
                                <TextBlock
                                    Text="Перетягніть файли сюди або використайте меню 'Файл' → 'Відкрити файли'"
                                    FontSize="14"
                                    Foreground="Gray"
                                    HorizontalAlignment="Center"
                                    TextWrapping="Wrap"
                                    TextAlignment="Center" />
                            </StackPanel>

                            <Border x:Name="DragOverlay"
                                    Background="#4000A0FF"
                                    BorderBrush="#FF00A0FF"
                                    BorderThickness="3"
                                    Visibility="Collapsed">
                                <StackPanel HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                    <TextBlock
                                               HorizontalAlignment="Center"
                                               Foreground="#FF00A0FF"
                                               Margin="0,0,0,15" />
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding MediaFiles.Count}" Value="0">
                            <Setter TargetName="EmptyStateOverlay" Property="Visibility" Value="Visible" />
                        </DataTrigger>
                        <DataTrigger
                            Binding="{Binding MediaFiles.Count, Converter={x:Static local:GreaterThanZeroConverter.Instance}}"
                            Value="True">
                            <Setter TargetName="EmptyStateOverlay" Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </ListBox.Template>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="{Binding FileTypeIcon}"
                                   FontSize="16"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0" />

                        <TextBlock Grid.Column="1"
                                   Text="{Binding FilePath}"
                                   FontSize="12"
                                   VerticalAlignment="Center"
                                   TextWrapping="Wrap" />

                        <Grid Grid.Column="2"
                              VerticalAlignment="Center"
                              Margin="10,0,0,0">
                            <TextBlock x:Name="CopySuccessIndicator"
                                       Text="✓"
                                       FontSize="16"
                                       Foreground="Green"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Visibility="Collapsed" />

                            <Button Content="📋"
                                    ToolTip="Копіювати шлях до файлу"
                                    FontSize="14"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Padding="5"
                                    VerticalAlignment="Center"
                                    Cursor="Hand"
                                    Click="CopyPathButton_Click"
                                    Tag="{Binding FilePath}">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Opacity" Value="0" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="3">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center" />
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#FFE0E0E0" />
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter Property="Background" Value="#FFD0D0D0" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <DataTrigger
                                                Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsMouseOver}"
                                                Value="True">
                                                <Setter Property="Opacity" Value="1" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <TextBlock Grid.Row="3"
                   Text="{Binding FileCountText}"
                   HorizontalAlignment="Center"
                   FontSize="12"
                   Foreground="Gray"
                   Margin="0,10,0,0" />

        <StackPanel Grid.Row="4" Margin="0,20,0,0" Visibility="{Binding ProgressVisibility}">
            <TextBlock x:Name="ProgressText"
                       Text="{Binding ProgressText}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10" />
            <ProgressBar x:Name="LoadingProgressBar"
                         Height="25"
                         Value="{Binding ProgressValue}"
                         Minimum="0"
                         Maximum="100" />
            <TextBlock x:Name="ProgressPercentage"
                       Text="{Binding ProgressPercentageText}"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0" />
        </StackPanel>

        <TextBlock Grid.Row="5"
                   Text="{Binding ResultMessage}"
                   Visibility="{Binding ResultVisibility}"
                   Foreground="{Binding ResultTextColor}"
                   FontSize="14"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,0"
                   TextWrapping="Wrap" />
    </Grid>

    <Window.Resources>
        <Style TargetType="ListBoxItem">
            <Setter Property="Background" Value="White" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsDuplicate}" Value="True">
                    <Setter Property="Background" Value="#FFE6E6" />
                    <Setter Property="BorderBrush" Value="Red" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
</Window>