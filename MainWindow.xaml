<Window x:Class="MediaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaApp"
        WindowState="Normal"
        WindowStartupLocation="CenterScreen"
        Background="#FFFFFF"
        mc:Ignorable="d"
        Title="MediaApp" Height="500" Width="800"
        Icon="Resources/icon.ico">
    
    <Grid Margin="0" MouseLeftButtonDown="Grid_MouseLeftButtonDown" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Menu Grid.Row="1" Background="Transparent" Margin="0">
            <MenuItem Header="Файл">
                <MenuItem x:Name="OpenMenuItem" Header="Відкрити" Click="SelectFilesButton_Click" />
                <Separator />
                <MenuItem Header="Вийти" Click="ExitMenuItem_Click" />
            </MenuItem>
            <MenuItem Header="Інструменти">
                <MenuItem x:Name="CheckDuplicatesMenuItem" Header="Перевірити"
                          Click="CheckDuplicatesButton_Click"
                          IsEnabled="{Binding CanCheckDuplicates}" />
                <Separator />
                <MenuItem x:Name="DeleteDuplicatesMenuItem" Header="Видалити дублікати"
                          Command="{Binding DeleteDuplicatesCommand}"
                          IsEnabled="{Binding CanDeleteDuplicates}" />
                <Separator />
                <MenuItem x:Name="ClearMenuItem" Header="Очистити"
                          Click="ClearMenuItem_Click"
                          IsEnabled="{Binding CanClearFiles}" />
            </MenuItem>
            <MenuItem Header="Довідка">
                <MenuItem Header="Про програму" Click="AboutMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <ListBox Grid.Row="2"
                 x:Name="FileListBox"
                 ItemsSource="{Binding MediaFiles}"
                 Background="#FFFFFF"
                 BorderBrush="#CCCCCC"
                 BorderThickness="0, 2, 0, 2"
                 Margin="0"
                 ScrollViewer.VerticalScrollBarVisibility="Visible"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                 ScrollViewer.CanContentScroll="True"
                 MouseDoubleClick="FileListBox_MouseDoubleClick"
                 AllowDrop="True"
                 Drop="FileListBox_Drop"
                 DragEnter="FileListBox_DragEnter"
                 DragLeave="FileListBox_DragLeave"
                 DragOver="FileListBox_DragOver">

            <ListBox.Template>
                <ControlTemplate TargetType="ListBox">
                    <Border BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}">
                        <Grid>
                            <ScrollViewer x:Name="PART_ScrollViewer"
                                          Focusable="false"
                                          HorizontalScrollBarVisibility="{TemplateBinding ScrollViewer.HorizontalScrollBarVisibility}"
                                          VerticalScrollBarVisibility="{TemplateBinding ScrollViewer.VerticalScrollBarVisibility}">
                                <ItemsPresenter />
                            </ScrollViewer>

                            <StackPanel x:Name="EmptyStateOverlay"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Opacity="0.5">
                                <TextBlock Text="📁"
                                           Foreground="#333333"
                                           FontSize="60"
                                           HorizontalAlignment="Center"
                                           Margin="0" />
                                <TextBlock
                                    Text="Перетягніть файли сюди або використайте меню 'Файл' → 'Відкрити'"
                                    Foreground="#333333"
                                    FontSize="18"
                                    HorizontalAlignment="Center"
                                    TextWrapping="Wrap"
                                    TextAlignment="Center" />
                            </StackPanel>

                            <Border x:Name="DragOverlay"
                                    Background="#4000C851"
                                    BorderBrush="#FF00C851"
                                    BorderThickness="2"
                                    Visibility="Collapsed">
                                <StackPanel HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                    
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding MediaFiles.Count}" Value="0">
                            <Setter TargetName="EmptyStateOverlay" Property="Visibility" Value="Visible" />
                        </DataTrigger>
                        <DataTrigger
                            Binding="{Binding MediaFiles.Count, Converter={x:Static local:GreaterThanZeroConverter.Instance}}"
                            Value="True">
                            <Setter TargetName="EmptyStateOverlay" Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </ListBox.Template>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="{Binding FileTypeIcon}"
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0" />

                        <TextBlock Grid.Column="1"
                                   Text="{Binding FilePath}"
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   TextWrapping="Wrap" />

                        <Grid Grid.Column="2"
                              VerticalAlignment="Center"
                              Margin="5, 0,0,0">
                            <TextBlock x:Name="CopySuccessIndicator"
                                       Text="✔️"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Visibility="Collapsed" />

                            <Button Content="📋"
                                    ToolTip="Копіювати"
                                    Foreground="#333333"
                                    FontSize="14"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Padding="5"
                                    VerticalAlignment="Center"
                                    Cursor="Hand"
                                    Click="CopyPathButton_Click"
                                    Tag="{Binding FilePath}">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Opacity" Value="0" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="0">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center" />
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#FFE0E0E0" />
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter Property="Background" Value="#FFD0D0D0" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <DataTrigger
                                                Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsMouseOver}"
                                                Value="True">
                                                <Setter Property="Opacity" Value="1" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <TextBlock Grid.Row="3"
                   Text="{Binding FileCountText}"
                   HorizontalAlignment="Center"
                   FontSize="14"
                   Foreground="#333333"
                   Margin="10"
                   FontWeight="Normal"/>
        
        <StackPanel Grid.Row="4" 
                    Margin="20,5,20,5" 
                    Visibility="{Binding ProgressVisibility}">
            <TextBlock x:Name="ProgressText"
                       Text="{Binding ProgressText}"
                       Foreground="#333333"
                       HorizontalAlignment="Left"
                       FontSize="14"
                       FontWeight="Bold"
                       Margin="0,0,0,10" />
            
            <ProgressBar x:Name="LoadingProgressBar"
                         Height="20"
                         Value="{Binding ProgressValue}"
                         Minimum="0"
                         Maximum="100"
                         Background="#F0F0F0"
                         BorderBrush="#CCCCCC"
                         BorderThickness="1">
                <ProgressBar.Style>
                    <Style TargetType="ProgressBar">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ProgressBar">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="0">
                                        <Grid>
                                            <Rectangle Name="PART_Track" 
                                                       Fill="{TemplateBinding Background}" />
                                            <Rectangle Name="PART_Indicator" 
                                                       Fill="#FF00C851" 
                                                       HorizontalAlignment="Left" />
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ProgressBar.Style>
            </ProgressBar>
            
            <TextBlock x:Name="ProgressPercentage"
                       Text="{Binding ProgressPercentageText}"
                       Foreground="#333333"
                       HorizontalAlignment="Left"
                       FontSize="14"
                       FontWeight="Bold"
                       Margin="0" />
        </StackPanel>
        
        <TextBlock Grid.Row="5"
                   Text="{Binding ResultMessage}"
                   Visibility="{Binding ResultVisibility}"
                   Foreground="{Binding ResultTextColor}"
                   FontSize="14"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"
                   Margin="20,5,20,10"
                   TextWrapping="Wrap" />
    </Grid>

    <Window.Resources>
        <Style TargetType="ListBoxItem">
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsDuplicate}" Value="True">
                    <Setter Property="Background" Value="#FFE6E6" />
                    <Setter Property="BorderBrush" Value="Red" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
</Window>